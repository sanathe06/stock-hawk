<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/container_stock_list"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.RecyclerView
        android:paddingBottom="48dp"
        android:clipToPadding="false"
        android:id="@+id/recycler_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <android.support.design.widget.CoordinatorLayout
        android:id="@+id/fab_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/fab"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|right|end"
            android:layout_margin="16dp"
            android:contentDescription="@string/add_new_stock"
            android:src="@drawable/ic_add_white_24dp"
            app:backgroundTint="@color/material_blue_700"
            app:rippleColor="@color/material_blue_500"
            app:layout_behavior="com.sam_chordas.android.stockhawk.common.SnackBarBehavior" />
    </android.support.design.widget.CoordinatorLayout>

</RelativeLayout>
